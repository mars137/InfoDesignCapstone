var app = angular.module('errandify', ['ngRoute']);

app.config(['$routeProvider',
	  function ($routeProvider) {
	        $routeProvider.
	        when('login1', {
	            title: 'Login',
	            templateUrl: 'view/login/login.html',
	            controller: 'authCtrl'
	        })
	            .when('/logout', {
	                title: 'Logout',
	                templateUrl: 'partials/login.html',
	                controller: 'logoutCtrl'
	            })
	            .when('signup', {
	                title: 'Signup',
	                templateUrl: 'view/login/signup.html',
	                controller: 'authCtrl'
	            })
	            .when('/dashboard', {
	                title: 'Dashboard',
	                templateUrl: 'project.html'
	               // controller: 'authCtrl'
	            })
	            .when('/home', {
	                title: 'Login',
	                templateUrl: 'view/login/login.html',
	                controller: 'authCtrl',
	                role: '0'
	            })
	            .otherwise({
	                redirectTo: '/login'
	            });
	  }])